{
    "manifest_version": 3,
    "name": "xchan",
    "version": "1.0",
    "description": "Hide usernames and social metrics on x.com to prevent groupthink.",
    "permissions": [],
    "content_scripts": [
      {
        "matches": ["*://x.com/*", "*://twitter.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "48": "icon48.png"
    }
  }